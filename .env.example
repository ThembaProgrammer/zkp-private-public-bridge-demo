# ── GoQuorum (private chain) ─────────────────────────────────────────────────
QUORUM_RPC_URL=http://127.0.0.1:8545

# Private keys for the three approval roles (Quorum accounts)
QUORUM_DEPLOYER_PK=0xYOUR_QUORUM_DEPLOYER_PRIVATE_KEY
QUORUM_AGENT_PK=0xYOUR_AGENT_PRIVATE_KEY
QUORUM_BANK_PK=0xYOUR_BANK_PRIVATE_KEY
QUORUM_HOUSING_DEPT_PK=0xYOUR_HOUSING_DEPT_PRIVATE_KEY

# Corresponding addresses (used in governance contract constructor)
QUORUM_AGENT_ADDRESS=0xYOUR_AGENT_ADDRESS
QUORUM_BANK_ADDRESS=0xYOUR_BANK_ADDRESS
QUORUM_HOUSING_DEPT_ADDRESS=0xYOUR_HOUSING_DEPT_ADDRESS

# ── Hardhat (public chain) ────────────────────────────────────────────────────
# Port 8546 — intentionally different from GoQuorum's 8545
HARDHAT_RPC_URL=http://127.0.0.1:8546

# Deployer for the public chain contracts (Hardhat test account #0 shown below)
HARDHAT_DEPLOYER_PK=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# ── Relayer ───────────────────────────────────────────────────────────────────
# Private key used by the relayer to sign mintHouseToken() on Hardhat
RELAYER_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Address that will receive the ERC-1155 token
NFT_RECIPIENT=0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266

# ── Test flow ─────────────────────────────────────────────────────────────────
TEST_HOUSE_ID=42
# How long (ms) to poll the public chain waiting for the minted token
MINT_POLL_TIMEOUT_MS=60000
